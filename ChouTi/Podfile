platform :ios, '9.0'
use_frameworks!

# Pods
def pod_chouti_dependency
  # Dependency for `LoadingMorphingLabel`
  pod 'LTMorphingLabel'

  # Dependency for `Operation`
  # pod 'Operations'
end

def pod_testing
  pod 'Quick'
  pod 'Nimble'
end

# Targets
target 'ChouTi' do
  pod_chouti_dependency

  target 'ChouTiTests' do
    inherit! :search_paths
    pod_testing
  end

end

target 'ChouTi iOS' do
  pod 'ChouTi/All', :path => '../'

  target 'ChouTi iOSUITests' do
    inherit! :search_paths
    pod_testing
  end

end
