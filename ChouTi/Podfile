platform :ios, '9.0'
use_frameworks!

# Pods
def pod_testing
  pod 'Quick', '1.0'
  pod 'Nimble', '~> 5.1'
end

# Targets
target 'ChouTiTests' do
  pod_testing
end

target 'ChouTi iOSUITests' do
  pod_testing
end

post_install do |installer|
	installer.pods_project.targets.each do |target|
		target.build_configurations.each do |config|
			config.build_settings['SWIFT_VERSION'] = '3.0.1'
		end
	end
end
